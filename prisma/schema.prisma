generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Field {
  fieldCode     String @id
  fieldName     String
  fieldLocation String
  fieldSize     String
  fieldImage01  String
  fieldImage02  String
}

model Staff {
  staffId     String   @id
  firstName   String
  lastName    String
  designation String
  gender      String
  joinDate    DateTime
  dateOfBirth DateTime
  address01   String
  address02   String
  address03   String
  address04   String
  address05   String
  contactNo   String
  email       String
  role        String
}
